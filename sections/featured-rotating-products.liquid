<div id="featured-rotating-products" class="featured-products-section">
  <h2>{{ section.settings.title }}</h2>
  <div class="products-container">
    {% for product in collections[section.settings.collection].products limit: 6 %}
      <div class="product" data-product-index="{{ forloop.index0 }}">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const products = document.querySelectorAll('.product');
    let currentIndex = 0;

    function showNextProducts() {
      products.forEach((product, index) => {
        if (index >= currentIndex && index < currentIndex + 3) {
          product.style.display = 'block';
        } else {
          product.style.display = 'none';
        }
      });

      currentIndex = (currentIndex + 3) % products.length;
    }

    // Змінюємо товари кожні 10 секунд
    setInterval(showNextProducts, 10000);

    // Показуємо перші товари при завантаженні сторінки
    showNextProducts();
  });
</script>

<style>
  .featured-products-section {
    text-align: center;
    padding: 20px;
  }

  .products-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }

  .product {
    width: 30%;
    margin-bottom: 20px;
  }

  .product img {
    max-width: 100%;
    height: auto;
  }
</style>

{% schema %}
{
  "name": "Featured Rotating Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select a collection to display products from"
    }
  ],
  "presets": [
    {
      "name": "Featured Rotating Products",
      "category": "Custom"
    }
  ]
}
{% endschema %}